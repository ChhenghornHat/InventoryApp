@{
    ViewData["Title"] = "Oops! Data not found.";
}

<!-- Main content -->
<section class="content">
    <div class="error-page">
    <h2 class="headline text-yellow"> 404</h2>

    <div class="error-content">
        <h3><i class="fa fa-warning text-yellow"></i> Oops! Data not found.</h3>

        <p>
        We could not find the data you were looking for.
                Meanwhile, you may <a asp-action="SearchFilter" asp-controller="Inventory">return to dashboard</a> or try using the search form.
        </p>

        <form class="search-form">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search">

                <div class="input-group-btn">
                <button type="submit" name="submit" class="btn btn-warning btn-flat"><i class="fa fa-search"></i>
                </button>
                </div>
            </div>
            <!-- /.input-group -->
        </form>
    </div>
    <!-- /.error-content -->
    </div>
    <!-- /.error-page -->
</section>
<!-- /.content -->
